@model DistributorWebsite.MVC.WebUI.Models.ReportFormDTO
<div class="panel HC-panel-det box-max-medium" id="divREPORTGENERATION" style="display: none;">
    <div class="panel-heading">
        <div class="btn-group pull-right">
            <a href="#" class="btn btn-default" onclick="HCE.ARReports.CloseDetailWindow(this)"><span class="fa fa-close fa-lg"></span></a>
        </div>
        <h1 id="hdrREPORTSELECTION"></h1>
    </div>
    <div class="panel-body">
        <form id="frmREPORTGENERATION" data-rooturl="@(DistributorWebsite.MVC.WebUI.Helpers.Application.Instance.APIS.DistributorWebAPI)" target="_blank" method="post">
            <input type="hidden" id="reportparmEXPORTFORMAT" name="exportformat" value="pdf" />

            <div id="reportparmCLIENT" class="form-group">
                <div class="col-xs-12 padbottom">
                    @Html.LabelFor(o => o.Client)
                    @Html.DropDownListFor(o => o.Client, new List<SelectListItem>(), new { @class = "form-control nomax", id = "parmCLIENT" })
                    @Html.ValidationMessageFor(o => o.Client)
                </div>
            </div>

            <div id="reportparmDATE" class="form-group">
                <div class="col-xs-12 padbottom">
                    @Html.LabelFor(o => o.ReportDate)
                    <div class="input-group date" id="dtReportDate">
                        @Html.TextBoxFor(o => o.ReportDate, new { @class = "form-control", id = "parmREPORTDATE" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.HCValidationMessageFor(o => o.ReportDate)
                </div>
            </div>

            <div id="reportparmDATERANGE" class="form-group">

                <div class="col-xs-12 padbottom">
                    @Html.LabelFor(o => o.DateFrom)
                    <div class="input-group date" id="dtReportDateFrom">
                        @Html.TextBoxFor(o => o.DateFrom, new { @class = "form-control", id = "parmREPORTDATEFROM" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.HCValidationMessageFor(o => o.DateFrom)
                </div>

                <div class="col-xs-12 padbottom">
                    @Html.LabelFor(o => o.DateTo)
                    <div class="input-group date" id="dtReportDateTo">
                        @Html.TextBoxFor(o => o.DateTo, new { @class = "form-control", id = "parmREPORTDATETO" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.HCValidationMessageFor(o => o.DateTo)
                </div>

            </div>

            <div id="reportparmPERIOD" class="form-group">
                <div class="col-xs-12 padbottom">
                    @Html.LabelFor(o => o.Period)
                    @Html.DropDownListFor(o => o.Period, (SelectList)ViewBag.ReportPeriods, new { @class = "form-control", id = "parmPERIOD" })
                    @Html.ValidationMessageFor(o => o.Period)
                </div>
            </div>

            <div id="reportparmMONTHS" class="form-group">
                <div class="col-xs-12 padbottom">
                    @Html.LabelFor(o => o.Months)
                    @Html.DropDownListFor(o => o.Months, new List<SelectListItem>(), new { @class = "form-control", id = "parmMONTHS" })
                    @Html.ValidationMessageFor(o => o.Months)
                </div>
            </div>

            <div id="reportparmWEEK" class="form-group">
                <div class="col-xs-12 padbottom">
                    @Html.LabelFor(o => o.Week)
                    @Html.DropDownListFor(o => o.Week, (SelectList)ViewBag.ReportWeeks, new { @class = "form-control nomax", id = "parmWEEK" })
                    @Html.ValidationMessageFor(o => o.Week)
                </div>
            </div>

            <div id="reportparmSTATE" class="form-group">
                <div class="col-xs-12 padbottom">
                    @Html.LabelFor(o => o.State)
                    @Html.DropDownListFor(o => o.State, (SelectList)ViewBag.ReportUSStates, new { @class = "form-control nomax", id = "parmSTATE" })
                    @Html.ValidationMessageFor(o => o.State)
                </div>
            </div>
            
            @if (ViewBag.Weekending != null)
            {
                <div id="reportparmWEEKENDING" class="form-group">
                    <div class="col-xs-12 padbottom">
                        @Html.LabelFor(o => o.Weekending)
                        @Html.DropDownListFor(o => o.Weekending, (SelectList)ViewBag.Weekending, new { @class = "form-control nomax", id = "parmWEEKENDING" })
                        @Html.ValidationMessageFor(o => o.Weekending)
                    </div>
                </div>
            }
            @if (ViewBag.Region != null)
            {
                <div id="reportparmREGION" class="form-group">
                    <div class="col-xs-12 padbottom">
                        @Html.LabelFor(o => o.Region)
                        @Html.DropDownListFor(o => o.Region, (SelectList)ViewBag.Region, new { @class = "form-control nomax", id = "parmREGION" })
                        @Html.ValidationMessageFor(o => o.Region)
                    </div>
                </div>
            }
            <div id="reportparmORDERBY" class="form-group">
                <div class="col-xs-12 padbottom">
                    @Html.LabelFor(o => o.OrderBy)
                    @Html.DropDownListFor(o => o.OrderBy, (SelectList)ViewBag.GenericSelectList, new { @class = "form-control nomax", id = "parmORDERBY" })
                    @Html.ValidationMessageFor(o => o.OrderBy)
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <button type="button" class="btn btn-primary" data-type="GENERATEREPORT" data-fmt="pdf"><span class="fa fa-file-pdf-o"></span> PDF</button>
                    <button type="button" class="btn btn-primary" data-type="GENERATEREPORT" data-fmt="excel"><span class="fa fa-file-excel-o"></span> Excel</button>
                </div>
            </div>

            </form>

